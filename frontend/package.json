  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.2.4",
    "audit-ci": "^6.6.1",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.8.0",
    "chrome-launcher": "^1.1.0",
    "cypress": "^13.0.0",
    "cypress-axe": "^1.5.0",
    "jsdom": "^25.0.1",
    "less": "^4.4.1",
    "less-loader": "^12.3.0",
    "lighthouse": "^12.8.2",
    "msw": "^2.11.3",
    "postcss": "^8.5.6",
    "start-server-and-test": "^2.0.0",
    "tailwindcss": "^3.4.0",
    "vite": "^6.3.6",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ci": "vitest run --coverage",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test:e2e": "start-server-and-test dev http://localhost:5173 cypress:run",
    "test:lighthouse": "node scripts/performance-test.js",
    "test:performance": "npm run test:lighthouse",
    "test:security": "npm run test:e2e -- --spec 'cypress/e2e/security.cy.ts'",
    "test:accessibility": "npm run test:e2e -- --spec 'cypress/e2e/accessibility.cy.ts'",
    "test:audit": "npm audit --audit-level=moderate",
    "test:all": "npm run test:ci && npm run test:e2e && npm run test:performance && npm run test:audit",
    "test:coverage:open": "npm run test:coverage && open coverage/index.html",
    "test:coverage:threshold": "vitest run --coverage --coverage.thresholds.statements=80 --coverage.thresholds.branches=70 --coverage.thresholds.functions=75 --coverage.thresholds.lines=80"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
