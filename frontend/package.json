{
  "name": "animalineage-frontend",
  "version": "0.1.0",
  "private": true,
  "license": "Apache-2.0",
  "author": "Nicolas Jalibert",
  "dependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.126",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-scripts": "^5.0.1",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "msw": "^1.3.0",
    "cypress": "^13.0.0",
    "start-server-and-test": "^2.0.0",
    "lighthouse": "^11.0.0",
    "chrome-launcher": "^1.1.0",
    "axe-core": "^4.8.0",
    "cypress-axe": "^1.5.0",
    "audit-ci": "^6.6.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/index.tsx",
      "!src/reportWebVitals.ts",
      "!src/**/*.d.ts",
      "!src/mocks/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:watch": "react-scripts test --watch",
    "test:coverage": "react-scripts test --coverage --watch=false",
    "test:ci": "CI=true react-scripts test --coverage --watch=false",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test:e2e": "start-server-and-test start http://localhost:3000 cypress:run",
    "test:lighthouse": "node scripts/performance-test.js",
    "test:performance": "npm run test:lighthouse",
    "test:security": "npm run test:e2e -- --spec 'cypress/e2e/security.cy.ts'",
    "test:accessibility": "npm run test:e2e -- --spec 'cypress/e2e/accessibility.cy.ts'",
    "test:audit": "npm audit --audit-level=moderate",
    "test:all": "npm run test:ci && npm run test:e2e && npm run test:performance && npm run test:audit",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
